source 'https://rubygems.org'

# Jekyll core
gem 'jekyll', '~> 4.3.0'

# Required for Jekyll 4.x
gem 'webrick'

# Future Ruby compatibility
gem 'csv'
gem 'base64'

# Faraday retry support
gem 'faraday-retry'

# Jekyll plugins
group :jekyll_plugins do
  gem 'jekyll-paginate'
  gem 'jekyll-geo-pattern'
  gem 'jekyll-github-metadata'
  gem 'jekyll-sitemap'
  gem 'jekyll-feed'
  gem 'jekyll-seo-tag'
end

# Markdown processing
gem 'kramdown', '~> 2.4'
gem 'kramdown-parser-gfm'

# Syntax highlighting
gem 'rouge', '~> 4.0'

# Windows-specific
gem 'wdm', platforms: [:windows]
gem 'tzinfo-data', platforms: [:windows, :jruby]